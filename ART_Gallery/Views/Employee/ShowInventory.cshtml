@model IEnumerable<ART_Gallery.ViewModels.MainViewModel>

<h2>Inventory</h2>
<table>
    <tr>
        <th>Name</th>
        <th>Number in Inventory</th>
        <th>Retail Price</th>
        <th>Purchase Price</th>
        <th>Image</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchasePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
        </tr>
    }
</table>
@Html.ActionLink("My Inventory", "ShowInventory", "Employee")


